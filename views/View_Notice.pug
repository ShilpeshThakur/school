doctype html
html
    head
        link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet', integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm", crossorigin="anonymous")
    
        title=name
    body
        div.container

            br
            br
            h1 Notice detail :
            br 
            div.form-inline
                label(for = "Title" style="margin-right: 50px") Title : #{notice.title}
                
            br
            div.form-inline
                label(for = "description" style="margin-right: 26px") description : #{notice.description}
            
            br
            br
            div.form-group
                button.btn.btn-primary(type="submit" style="margin-right: 16px" onclick='goBack()') Back  
            
            script.
                var goBack = function() {
                    window.history.back();
                }
                    
